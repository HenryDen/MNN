<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/arm_dev_background2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/arm_dev_background2"/>
    <include layout="@layout/infobar"
        android:id="@+id/infomation"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/conversation"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/conversation"
        app:layout_constraintTop_toBottomOf="@id/infomation"
        app:layout_constraintBottom_toTopOf="@id/rl_bottom">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:overScrollMode="never" />
        <ImageButton
            android:id="@+id/toggleButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:tooltipText="Inspiration"
            android:layout_marginLeft="@dimen/space10"
            android:background="@drawable/bubble_background"
            android:layout_marginBottom="8dp"
            android:src="@drawable/suggestion_svgrepo_com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="10dp" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_goneMarginBottom="10dp"
            android:id="@+id/predefineView">
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promptBubble1"
                android:background="@drawable/bubble_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/promptBubble2"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/examplePicture1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What kind of dishes could be made with these ingredients?"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/examplePicture1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promptBubble2"
                android:background="@drawable/bubble_background"
                app:layout_constraintTop_toBottomOf="@+id/promptBubble1"
                app:layout_constraintBottom_toTopOf="@id/promptBubble4"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/examplePicture2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How many people are in this picture?"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/examplePicture2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promptBubble3"
                android:background="@drawable/bubble_background"
                app:layout_constraintTop_toBottomOf="@+id/promptBubble1"
                app:layout_constraintBottom_toTopOf="@id/promptBubble5"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/promptBubble2"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/examplePicture3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's the weather?"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/examplePicture3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promptBubble4"
                android:background="@drawable/bubble_background"
                app:layout_constraintTop_toBottomOf="@+id/promptBubble2"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="5dp"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/examplePicture4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is happening in this image?"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/examplePicture4"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout><androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/promptBubble5"
                android:background="@drawable/bubble_background"
                app:layout_constraintTop_toBottomOf="@+id/promptBubble3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/promptBubble4"
                android:padding="5dp">
                <ImageView
                    android:id="@+id/examplePicture5"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What is it in the picture?"
                    android:textSize="12dp"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white"
                    app:layout_constraintStart_toEndOf="@+id/examplePicture5"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/space10"
        android:paddingRight="@dimen/space5"
        android:paddingTop="@dimen/space5"
        android:paddingBottom="@dimen/space5"
        android:background="#E9EDED"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/bt_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/editLayout"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/button_send"
            android:layout_marginEnd="10dp"
            tools:ignore="ContentDescription"/>

        <RelativeLayout
            android:id="@+id/editLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@id/bt_send"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/bg_white_rounded"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/bt_select_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:srcCompat="@drawable/ic_image"
                android:padding="@dimen/space10"
                android:layout_alignParentRight="true"
                android:scaleType="centerCrop"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"/>

            <EditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/bt_select_image"
                android:padding="10dp"
                android:hint="Ask me anything..."
                android:inputType="textMultiLine"
                android:scrollHorizontally="false"
                android:minLines="1"
                android:maxLines="5"
                android:textSize="15dp"
                android:textColor="@color/colorTextBlack"
                android:textColorHint="@color/colorTextHint"
                android:textAppearance="@style/Light"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
